{
  "name": "Custom Mosaic",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_large",
      "label": "Image"
    },
	 {
      "type": "url",
      "id": "image_large_link",
      "label": "Url"
    }
	
  ],
"name": "Main Block",
 "blocks": [
    {
      "type": "image",
      "name": "Coloum Image",
      "settings": [
       {
      "type": "image_picker",
      "id": "image_first",
      "label": "Image"
    	},
	  {
      "type": "text",
      "id": "image_first_link",
      "label": "Link"
      }
      ]
    },
	  {
      "type": "text",
      "name": "Slider Content",
      "settings": [
		{
      "type": "text",
      "id": "slide_heading",
      "label": "Heading"
    	},
       {
      "type": "richtext",
      "id": "slide_content",
      "label": "Content"
    	},
	  {
      "type": "text",
      "id": "slider_button",
      "label": "Button Text"
      }, 
	   {
      "type": "url",
      "id": "slider_button_link",
      "label": "Button Link"
      }
      ]
    },
	 {
      "type": "url",
      "name": "Left Content",
      "settings": [
	  {
      "type": "image_picker",
      "id": "left_background",
      "label": "Background"
      },
      {
      "type": "text",
      "id": "left_content_heading",
      "label": "Heading"
    	},
       {
      "type": "richtext",
      "id": "left_content_content",
      "label": "Content"
    	},
	  {
      "type": "text",
      "id": "left_content_button",
      "label": "Button Text"
      }, 
	   {
      "type": "url",
      "id": "left_content_button_link",
      "label": "Button Link"
      }
      ]
    }
  ],

  "presets": [
    {
      "category": "Image",
      "name": "Custom Mosaic",
      "settings": {}
    }
  ]
}
{% endschema %}


