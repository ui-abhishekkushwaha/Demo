<link rel="stylesheet" href="{{ 'custom-mosaic.css' | asset_url }}">

<div class="custom-mosaic-outer">
<div class="custom-mosaic-inner">
  <div class="custom-mosaic-first-row">
  
  <div class="custom-mosaic-first-col">
  <div class="custom-mosaic-first-image">
	
     <div class="custom-mosaic-inner-row">
 		{% render 'custom-mosaic-small'%}
       	{% render 'custom-mosaic-content_slider'%}
       	{% render 'custom-mosaic-left-col-content'%}
       
    </div>
    
  </div>
  
  </div>
  
  <div class="custom-mosaic-second-col">
	{% render 'custom-mosaic-large'%}

  </div>
  
  </div>




</div>
</div>

