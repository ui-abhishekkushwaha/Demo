{% schema %}
{
  "name": "Custom Testimonials",
  "settings": [
	{
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Heading"
    },
	{
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "link_title",
      "label": "Link title",
      "default": "View all"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    }
	
  ],

	"presets": [
    {
      "category": "text",
      "name": "Custom Testimonial ",
      "settings": {}
    }
  ]
}

{% endschema %}

<style>
.ced-testimonials {
	 position: relative;
	 margin-top: 30px;
}
.ced-testimonials h2 {
	 font-size: 30px;
	 text-align: center;
	 color: #333;
	 margin-bottom: 50px;
}
 .ced-testimonials .card {
	 background: #fff;

	 margin: 0 20px;
	 padding: 0 10px;
	 border-radius: 20px;
	 border: 0;
}
 .ced-testimonials .card .card-img-top {
	 max-width: 100px;
	 border-radius: 50%;
	 margin: 15px auto 0;
	 box-shadow: 0 8px 20px -4px #95abbb;
	 width: 100px;
	 height: 100px;
}
.ced-testimonials .card h5 {
	 color: var(--secondary-button-background);
	 font-size: 1.4rem;
	 line-height: 1.3;
     margin:15px 0px;
}
 .ced-testimonials .card h5 span {
	 font-size: 1rem;
	 color: var(--customFirstColor);
}
 .ced-testimonials .card p {
	 font-size: 18px;
	 color: var(--customFirstColor);
	 padding-bottom: 15px;
}
 .ced-testimonials .active {
	 opacity: 0.5;
	 transition: all 0.3s;
}
 .ced-testimonials .center {
	 opacity: 1;
}
 .ced-testimonials .center h5 {
	 font-size: 24px;
}
 .ced-testimonials .center h5 span {
	 font-size: 20px;
}
 .ced-testimonials .center .card-img-top {
	 max-width: 100%;
	 height: 120px;
	 width: 120px;
}

</style>


