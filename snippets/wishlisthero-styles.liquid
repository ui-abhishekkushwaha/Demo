}
.MuiTypography-h1 , .MuiTypography-h2 , .MuiTypography-h3 , .MuiTypography-h4 , .MuiTypography-h5 , .MuiTypography-h6 {
     font-family: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }} !important;
}

